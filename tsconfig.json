{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "scripts/*.ts",
    "packages/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
